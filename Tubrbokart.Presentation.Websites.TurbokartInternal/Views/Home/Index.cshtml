@model Tubrbokart.Presentation.Websites.TurbokartInternal.Models.Viewmodels.IndexModel
@{
    ViewData["Title"] = "Home Page";
}



<form method="post">
    <div class="row">
        <div class="col">
            <label class="form-label">Dato:</label>
            <input class="form-control" type="date" asp-for="Date"/>
        </div>
        <div class="col">
            <label class="form-label">Dage frem:</label>
            <input class="form-control" type="number" asp-for="DaysAhead"/>
        </div>
        <div class="col d-flex align-items-end">
            <button class="btn btn-primary"><i class="bi bi-search me-1"></i> Søg</button>
        </div>
        <div class="col d-flex justify-content-end align-items-end">
            <a class="btn btn-success" href=""><i class="bi bi-plus-circle me-1"></i> Opret ny booking</a>
        </div>
    </div>
</form>
